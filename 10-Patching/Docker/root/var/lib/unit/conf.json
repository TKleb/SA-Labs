{
	"applications": {
		"php": {
			"type": "php",
			"options": {
				"file": "/opt/www/php.ini"
			},
			"targets": {
				"front": {
					"script": "index.php",
					"root": "/opt/www/"
				},
                "functions": {
					"script": "functions.php",
					"root": "/opt/www/"
				}
            }
		}
	},
	"listeners": {
		"*:80": {
			"pass": "routes"
		}
	},
	"routes": [
		{
			"match": {
				"uri": "/main.css"
			},
			"action": {
				"share": "/opt/www"
			}
		},
		{
			"action": {
				"pass": "applications/php/front"
			}
		}
	]
}

